<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
</head>

<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1>
            <%= blog.title %>
        </h1>
        <img src="<%= blog.coverImageURL %>" width="700px" height="300px" alt="">
        <pre class="mt-4 "><%= blog.body %></pre>
    </div>
    
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px" alt="<%= blog.createdBy.fullName %>">
        <%= blog.createdBy.fullName %>
    </div>
    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>) </h1>
    <% if(locals.user){ %>
        <div action="/blog/comment/<%= blog._id %>" method="post">
        <div class="container mt-3">
            <form action="">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter your comment"/>
            </form>
            <button class="btn btn-sn btn-primary" type="submit">Add</button>
        </div>
    <% } %>    
    </div>
    <div class="mt-3">
        <% comments.forEach(comment => { %>
            <div>
              <img src="<%= comment.createdBy.profileImageURL %>" width="50px" />
              <%= comment.createdBy.fullName %>
              <pre><%= comment.content %></pre>
            </div>
            <% }) %>     
    </div>
    <%- include('./partials/script') %>
</body>

</html>
