<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
      /* CSS will go here */
      /* General body styling */
body {
  font-family: 'Arial', sans-serif;
  background-color: #f0f8ff; /* Light blue background */
  margin: 0;
  padding: 0;
  overflow-x: hidden; /* Hide horizontal scroll */
}

/* Blog Container */
.blog-container {
  background-color: #f7f9fc; /* Soft gray background for the container */
  padding: 20px;
  border-radius: 10px;
}

/* Blog Grid */
.blog-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
}

/* Blog Card */
.blog-card {
  background-color: #ffffff;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1); /* Card shadow effect */
  transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out; /* Animation for card hover */
  border-radius: 10px;
  overflow: hidden;
}

.blog-card:hover {
  transform: scale(1.05); /* Zoom-in effect on hover */
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15); /* Enhanced shadow on hover */
}

/* Blog Image */
.blog-image {
  border-bottom: 1px solid #ddd;
  transition: transform 0.3s ease;
}

.blog-card:hover .blog-image {
  transform: scale(1.1); /* Slight zoom on hover */
}

/* Blog Body */
.blog-body {
  padding: 15px;
  text-align: center;
}

/* Blog Title */
.blog-title {
  font-size: 1.5rem;
  color: #0056b3;
  margin-bottom: 10px;
}

/* View Button */
.view-btn {
  background-color: #007bff;
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.view-btn:hover {
  background-color: #0056b3; /* Darker blue on hover */
  transform: scale(1.05); /* Slightly larger on hover */
}

/* Responsive Design */
@media (max-width: 768px) {
  .blog-grid {
    flex-direction: column;
    align-items: center;
  }

  .blog-card {
    width: 100%; /* Full width on smaller screens */
  }
}

    </style>
</head>

<body>
    <%- include('./partials/nav') %>
    
    <!-- Blog Container -->
    <div class="container mt-4 blog-container">
        <div class="row row-cols-4 blog-grid">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card blog-card" style="width: 19rem;">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top blog-image" alt="Blog Image">
                        <div class="card-body blog-body">
                            <h5 class="card-title blog-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary view-btn">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
    <%- include('./partials/script') %>

</body>

</html>
